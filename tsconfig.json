{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@types/*": ["types/*"],
      "@styles/*": ["src/styles/*"],
      "@components": ["src/components/index"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"]
    },
    "target": "ES2017"
  },
  "include": ["vite-env.d.ts", "**/*.ts", "**/*.tsx", ".vite/types/**/*.ts"],
  "exclude": ["node_modules"]
}
